<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.robertstitic.detector.AboutActivity">

    <TextView
        android:id="@+id/tv1"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEtektor aplikacija daje informacije korisniku o komponenti koju snima."
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glavne funkcionalnosti aplikacije su prepoznavanje digitalne elektronike i dohvaćanje informacija."
        android:textSize="25sp"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="100px" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Napravio Robert Štitić"
        android:textSize="25sp"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="250px" />

</RelativeLayout>